{
  "private": true,
  "description": "An easy solution for embedding Unity WebGL builds in your webApp",
  "keywords": [
    "unity",
    "webGL",
    "unity webGl"
  ],
  "scripts": {
    "preinstall": "node scripts/preinstall",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:lib": "pnpm --filter unity-webgl build",
    "build:vue": "pnpm --filter unity-webgl/vue build",
    "build": "pnpm run build:lib && pnpm run build:vue && node ./scripts/release.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "author": "Mervin <mengqing723@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^18.7.14",
    "chalk": "^4.1.2",
    "diy-log": "^2.4.0",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "yorkie": "^2.0.0"
  }
}
